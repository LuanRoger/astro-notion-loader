{
  "name": "@luanroger/notion-astro-loader",
  "description": "A fork of a fork of a Notion loader for the Astro Content Layer API.",
  "version": "1.0.0",
  "private": false,
  "type": "module",
  "author": "Luan Roger <luan.roger.2003@gmail.com> (https://github.com/LuanRoger)",
  "license": "MIT",
  "homepage": "https://github.com/LuanRoger/notion-astro-loader",
  "repository": {
    "type": "git",
    "url": "https://github.com/LuanRoger/notion-astro-loader.git"
  },
  "keywords": [
    "astro-loader",
    "astro",
    "notion"
  ],
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc && tsdown",
    "check": "biome check",
    "check:write": "biome check --write",
    "test": "vitest run",
    "test:watch": "vitest",
    "changelog": "git-cliff --config ./scripts/git-cliff.toml --output CHANGELOG.md",
    "release": "np --no-tests",
    "release:all": "npm run build && npm run release"
  },
  "dependencies": {
    "@jsdevtools/rehype-toc": "^3.0.2",
    "@notionhq/client": "^5.1.0",
    "fs-extra": "^11.3.0",
    "kleur": "^4.1.5",
    "notion-rehype-k": "^1.1.6",
    "rehype-katex": "^7.0.1",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.0",
    "slug": "^11.0.0",
    "unified": "^11.0.0",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "git-cliff": "^2.10.1",
    "np": "^10.2.0",
    "tsdown": "^0.15.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "@types/fs-extra": "^11.0.4",
    "@types/slug": "^5.0.9",
    "astro": "5.14.1",
    "crossrm": "^1.0.0",
    "vfile": "^6.0.3"
  }
}
